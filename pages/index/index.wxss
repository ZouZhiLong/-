/**index.wxss**/
/* pages/chat/chat.wxss */
page{
  background: #fafafa;
}


.bottom_box{
  width: 100%;
  /* height: 195rpx; */
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  bottom: 0;
  
}
.clearfix::after{
  content: '';
  clear: both;
  display: table;
}
.clearfix{
  zoom: 1;
}
.wantTo{
  width: 100%;
  display: flex;
}
.wantTitle{
  font-size: 28rpx;
  color: #888;
  line-height: 51rpx;
  margin-right: 35rpx;
}
.wantOptions{
  padding: 0 18rpx;
  box-sizing: border-box;
  line-height: 51rpx;
  border-radius: 26rpx;
  border: 2rpx  solid #888;
  font-size:28rpx;
  color:var(--text-color);
  margin-right: 30rpx;
  background: rgba(0, 0, 0, 0)
}
.sendTo{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.textarea_box{
  padding-top: 10rpx;
  border-radius: 30rpx;
  min-height: 60rpx;
  background: #fafafa;
  box-sizing: border-box;
}
.textarea_box textarea{
  min-height: 50rpx;
  width: 506rpx;
  line-height: 40rpx;
  padding: 0rpx 20rpx 0;
  box-sizing: border-box;
  font-size: 28rpx;
  overflow: hidden;
}
.icon_btn{
  width: 95rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.icon_btn image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}
.exper_tap {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}


.send_btn button{
  width: 95rpx;
  height: 50rpx;
  border-radius: 25rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}

.bottom_more{
  height: 0rpx;
  overflow: hidden
}
.bottom_more_none{
  transition: all 0.1s linear 0s;
  height: 0rpx;
}

.bottom_more_show{
  transition: all 0.2s linear 0s;
  height: 300rpx;
}
.a_expresion{
  margin: 0 25rpx;
}